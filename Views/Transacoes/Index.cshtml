                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoAutorizacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NSU)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Bandeira.Descricao)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ValorBruto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaxaAdmin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorLiquido)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
